{
  "name": "office-queue",
  "private": true,
  "workspaces": [
    "client/",
    "server/"
  ],
  "scripts": {
    "client": "cd client && npm run dev",
    "server": "cd server && npm start",
    "install-all": "npm install --prefix client && npm install --prefix server && npm install",
    "lint": "npm run lint:check -- --fix",
    "lint:check": "npm run lint:check:client && npm run lint:check:server",
    "lint:check:client": "eslint --config client/eslint.config.js 'client/**/*.{js,jsx}'",
    "lint:check:server": "eslint --config server/eslint.config.mjs 'server/**/*.{js,mjs}'",
    "format": "prettier --write 'client/**/*.{js,jsx,mjs}' 'server/**/*.{js,mjs}'",
    "format:check": "prettier --check 'client/**/*.{js,jsx,mjs}' 'server/**/*.{js,mjs}'",
    "check": "npm run lint:check && npm run format:check",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  }
}
